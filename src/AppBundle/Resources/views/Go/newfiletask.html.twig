{% block body -%}
    <div id="content-form">
        <form id="the-form-file" action="{{ path('app_go_newfiletask', { 'id': idtask }) }}" method="POST" enctype="multipart/form-data">
            <div class="panel panel-inverse">
                <div class="panel-body">
                    <div class="form-group {% if form_errors(form.file) is not empty  %}has-error has-feedback{% endif %}" >
                        <label>Nombre Archivo</label>
                        {{ form_widget(form.file) }}
                        {% if form_errors(form.file) is not empty %}
                            <div class="btn btn-danger btn-xs disabled">
                                {{ form_errors(form.file) }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        {{ form_widget(form.file) }}
                    </div>
                </div>
            </div>
            <div class="col-md-12" align="right">
                <button id="uploadButton" type="submit" class="btn btn-primary btn-medium">Guardar</button>

            </div>
            <div class="hide">
                {{ form_rest(form) }}

            </div>
        </form>
    </div>
{% endblock %}